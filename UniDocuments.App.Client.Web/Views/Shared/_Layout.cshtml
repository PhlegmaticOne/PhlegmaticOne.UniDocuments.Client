<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - UniDocuments</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    @await RenderSectionAsync("Styles", false)
</head>

<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">UniDocuments</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @switch (User.StudyRole())
                        {
                            case StudyRole.Student:
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Activities" asp-action="MyActivities">Мои активности</a>
                                </li>
                                break;
                            case StudyRole.Teacher:
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Activities" asp-action="CreatedActivities">Созданные активности</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="ActivityCreate" asp-action="Create">Создать активность</a>
                                </li>
                                break;
                        }

                        @switch (User.AppRole())
                        {
                            case AppRole.Admin:
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Панель управления системой</a>
                                </li>
                                break;
                        }
                    }
                </ul>
                <div class="d-flex align-items-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="me-2">
                            <span class="text-white-50">@User.Identity.Name</span>
                        </div>
                        <div class="dropdown">
                            <button class="btn btn-dark dropdown-toggle" href="#"
                                    id="navbarDropdownMenuLink"
                                    data-toggle="dropdown"
                                    aria-haspopup="true"
                                    aria-expanded="false">
                            </button>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-controller="Profile" asp-action="Details">Профиль</a>
                                <a class="dropdown-item" asp-controller="Profile" asp-action="Update">Редактировать профиль</a>
                                <a class="dropdown-item" asp-controller="Profile" asp-action="Logout">Выйти</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="btn-group" role="group">
                            <button class="btn btn-dark" onclick="location.href = '@Url.Action("Login", "Auth")'">
                                Войти
                            </button>
                            <button class="btn btn-dark" onclick="location.href = '@Url.Action("Register", "Auth")'">
                                Зарегистрироваться
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer text-muted text-center">
    <div class="container">
        &copy; @DateTime.Now.Year - Александр Кротов
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/layout.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap-dropdown.min.js"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>