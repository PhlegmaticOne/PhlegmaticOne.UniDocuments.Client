@model DocumentSearchResultEntry


<li class="d-flex justify-content-between">
    <div class="d-flex flex-row align-items-center">
        <i class="fa fa-check-circle checkicon"></i>
        <div class="m-2">
            <h6 class="mb-0">@Model.DocumentName</h6>
            <div class="d-flex flex-row mt-1 text-black-50 date-time">
                <div>
                    <i class="fa fa-calendar-o"></i>
                    <span class="ml-2 text-black">@Model.GetLoadedDate()</span>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex flex-row align-items-center">
        <div class="d-flex flex-column pe-2">
            <h6 class="mb-0">@Model.GetStudentInfo()</h6>
        </div>

        <div class="d-flex flex-column">
            <a class="btn btn-outline-dark btn-sm"
               asp-controller="Documents"
               asp-action="Download"
               asp-route-documentId="@Model.DocumentId">
                Скачать
            </a>
        </div>
    </div>
</li>