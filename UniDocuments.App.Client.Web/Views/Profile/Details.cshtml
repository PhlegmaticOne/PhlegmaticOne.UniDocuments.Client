@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UniDocuments.App.Shared.Users.ProfileObject
@{
    ViewData["Title"] = "Профиль";
}

<section>
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3 bg-dark">
                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-bottom-left-radius: .5rem; border-top-left-radius: .5rem;">
                            <h5 class="h5 my-3">@(Model.FirstName) @(Model.LastName)</h5>
                        </div>
                        <div class="col-md-8 bg-dark"
                             style="border-bottom-right-radius: .5rem; border-top-right-radius: .5rem;">
                            <div class="card-body p-4">
                                <h5 class="h5 text-white">Информация</h5>
                                <hr class="mt-0 mb-4 bg-white">
                                <div class="row pt-1">
                                    <div class="col-6 mb-3">
                                        <h6 class="h6 text-white">Ник</h6>
                                        <p class="text-muted text-white-50">@Model.UserName</p>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <h6 class="h6 text-white">Статус</h6>
                                        <p class="text-muted text-white-50">@Model.StudyRole.ToString()</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-outline-light btn-lg px-3 m-1"
                                            onclick="location.href = '@Url.Action("Update", "Profile")'">
                                        Обновить данные
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles
{
    <link rel="stylesheet" href="~/css/account_details.css" asp-append-version="true"/>
}